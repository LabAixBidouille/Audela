CXX = @CXX@
CC  = @CC@
LD  = @CC@
CP  = cp
RM  = rm -f -v

# Definitions for external tools

AUD_TCL_SPEC          = @TCL_PREFIX@
AUD_TCL_BIN_DIR       = @TCL_BIN_DIR@
AUD_TCL_INCLUDE_SPEC  = @TCL_INCLUDE_SPEC@
AUD_TCL_LIB_SPEC      = @TCL_LIB_SPEC@
AUD_TCL_STUB_LIB_SPEC = @TCL_STUB_LIB_SPEC@
AUD_TK_INCLUDE_SPEC   = @TK_XINCLUDES@
AUD_TK_LIB_SPEC       = @TK_LIB_SPEC@
AUD_TK_STUB_LIB_SPEC  = @TK_STUB_LIB_SPEC@

AUD_GSL_CFLAGS = @GSL_CFLAGS@
AUD_GSL_LIBS = @GSL_LIBS@
GSLFOUND = @GSL_FOUND@

# AudeLA definitions

ROOT  = @DEV_ROOT@
MAJOR = @MAJOR@
MINOR = @MINOR@
PATCH = @PATCH@
EXTRA = @EXTRA@

PACKAGE = audela
VERSION = $(MAJOR).$(MINOR).$(PATCH)$(EXTRA)

COMMON    = $(ROOT)
OUTPUTDIR = $(ROOT)/../bin
INCLUDE   = $(ROOT)/include
LIBCAMDIR = $(ROOT)/libcam
LIBTELDIR = $(ROOT)/libtel
LIBLINKDIR = $(ROOT)/liblink

EXTDIR = $(ROOT)/external
EXTINC = $(EXTDIR)/include
EXTLIB = $(EXTDIR)/lib

WEBCAM_ENABLE = @WEBCAM_ENABLE@

SRCDIR    = ../src

CXXFLAGS = @CXXFLAGS@ -c -Wall -DUSE_TCL_STUBS -DUSE_TK_STUBS -DUSE_COMPOSITELESS_PHOTO_PUT_BLOCK -DUSE_COMPAT_CONST -I $(INCLUDE) $(AUD_TCL_INCLUDE_SPEC) $(AUD_TK_INCLUDE_SPEC)
LDFLAGS  = @LDFLAGS@ @DL_LIB@ -lm -lstdc++ $(AUD_TCL_STUB_LIB_SPEC) $(AUD_TK_STUB_LIB_SPEC)

DLLIB = @DL_LIB@

# Definition of modules
EXTERNAL = @EXTERNAL@
CONTRIB  = @CONTRIB@
AUDELA   = @AUDELA@
LIBCAMS  = @LIBCAMS@
LIBTELS  = @LIBTELS@
LIBLINKS = @LIBLINKS@

ALL = $(CONTRIB) $(AUDELA) $(LIBCAMS) $(LIBTELS) $(LIBLINKS)

