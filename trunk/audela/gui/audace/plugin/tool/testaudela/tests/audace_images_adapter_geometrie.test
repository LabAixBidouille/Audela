   set naxis1 [lindex [buf$bufNo getkwd NAXIS1] 1]
   set naxis2 [lindex [buf$bufNo getkwd NAXIS2] 1]
   #---  efface l'image
   ::confVisu::deleteImage $visuNo
}

variable CLEANUP2 {
