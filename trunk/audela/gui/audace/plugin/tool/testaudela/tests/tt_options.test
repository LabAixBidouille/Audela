set visuNo 1
set bufNo [::confVisu::getBufNo $visuNo]
set w ".audace.prtr.usr"
#---  pour demarrer efface l'image
::confVisu::deleteImage $visuNo

#-------------------------------------------------------------------------------
#--   nature du test TT skylevel :
#     presence du mot-cle dans l'en-tete
test imaseries_mirror_x {miroir vertical de rgbr_8} {AUDACE} {
   file copy -force [file join $::conf(testaudela,rep_images) rgbr_8.fit] $::audace(rep_images)
   loadima [file join $::audace(rep_images) rgbr_8.fit]
   #--   clic sur le menu "Prétraitement/serieser des images/Miroir vertical..."
   ::testaudela::clicMenu $visuNo "$::caption(audace,menu,series)" "$::caption(audace,menu,miroir_x)..."
   #--   selectionne l'option "Options"
   ::testaudela::clicCheckButton $w.ttoptions.che 1
   #--   positionne la combobox sur 8
   ::testaudela::clicCombobox $w.ttoptions.combo.bitpix 0
   #--   coche skylevel
   ::testaudela::clicCheckButton $w.ttoptions.skylevel 1
   #--   coche jpegfile
   ::testaudela::clicCheckButton $w.ttoptions.jpegfile 1
   #--   sisit la qualite
   ::testaudela::putLabelEntry $w.ttoptions.jpeg_quality 100

   #-- saisit le nom de sortie
   ::testaudela::putLabelEntry $w.sortie.out "miroir_x"

   #--   clic sur le bouton Appliquer
   ::testaudela::clicButton $w.cmd.appliquer
   #--   miroir_x3 est chargée automatiquement

   #--   procedure de controle
   #--   clic sur le bouton Fermer
   ::testaudela::clicButton $w.cmd.fermer


   #---  efface l'image
   ::confVisu::deleteImage $visuNo
   set liste [list rgbr_8 miroir_x]
   #ttscript2 "IMA/SERIES . \"$liste\" * * .fit . . . . DELETE"
   return ""
} ""

